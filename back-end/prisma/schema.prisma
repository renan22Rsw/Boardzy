generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Board {
  id        String   @id @default(cuid())
  orgId     String
  title     String
  color     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  list      List[]

  @@index([orgId])
}

model List {
  id      String @id @default(cuid())
  title   String
  order   Int
  boardId String
  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  card    Card[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([boardId])
}

model Card {
  id          String  @id @default(cuid())
  title       String
  order       Int
  description String?
  listId      String
  list        List    @relation(fields: [listId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([listId])
}
